generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  imageUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notes Note[]

  @@map("user")
}

model Note {
  id      String @id @default(uuid())
  title   String
  content String
  userId  String

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("note")
}
